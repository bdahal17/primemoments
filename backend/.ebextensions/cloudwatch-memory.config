packages:
  yum:
    awslogs: []

files:
  "/etc/awslogs/awslogs.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
      [general]
      state_file = /var/lib/awslogs/agent-state

      [/memlog]
      file = /proc/meminfo
      log_group_name = /aws/elasticbeanstalk/instance-memory
      log_stream_name = {instance_id}
      datetime_format = none

services:
  sysvinit:
    awslogs:
      enabled: true
      ensureRunning: true
      files:
        - /etc/awslogs/awslogs.conf
